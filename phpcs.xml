<?xml version="1.0"?>
<ruleset name="DataValuesGeo">
	<file>src/</file>
	<file>tests/</file>

	<rule ref="./vendor/wikibase/wikibase-codesniffer/Wikibase" />

	<rule ref="Wikibase">
		<exclude name="Wikibase.Commenting.ClassLevelDocumentation.Missing" />
	</rule>

	<rule ref="Generic.Files.LineLength">
		<exclude name="Generic.Files.LineLength.TooLong" />
	</rule>

	<rule ref="Generic.Formatting.NoSpaceAfterCast" />
	<rule ref="Generic.Metrics.CyclomaticComplexity" />
	<rule ref="Generic.Metrics.NestingLevel" />
	<rule ref="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment" />
	<rule ref="Squiz.Operators.ValidLogicalOperators" />

	<rule ref="MediaWiki">
		<exclude name="MediaWiki.PHP70Features" />
		<exclude name="MediaWiki.PHP71Features" />
		<exclude name="MediaWiki.Commenting" />
		<exclude name="MediaWiki.WhiteSpace.DisallowEmptyLineFunctions.NoEmptyLine" />
	</rule>
</ruleset>
