<?xml version="1.0"?>
<ruleset name="DataValuesGeo">
	<rule ref="./vendor/wikibase/wikibase-codesniffer/Wikibase" />

	<rule ref="Generic.Files.LineLength">
		<properties>
			<property name="lineLimit" value="110" />
		</properties>
	</rule>

	<rule ref="Generic.Formatting.NoSpaceAfterCast" />
	<rule ref="Generic.Metrics.CyclomaticComplexity" />
	<rule ref="Generic.Metrics.NestingLevel" />
	<rule ref="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment" />
	<rule ref="PSR1.Files.SideEffects">
		<exclude-pattern>Geo\.php</exclude-pattern>
	</rule>
	<rule ref="Squiz.Operators.ValidLogicalOperators" />

	<file>.</file>
	<exclude-pattern>node_modules</exclude-pattern>

	<rule ref="MediaWiki.Usage">
		<exclude name="MediaWiki.Usage.ScalarTypeHintUsage" />
	</rule>
</ruleset>
